@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (Blog item in Model)
   {
       <tr>
           <th>@item.Id</th>
           <td>@item.Title</td>
           <td>@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
           <td>@item.Category.Name</td>
           <td>@item.Status</td>
           <td></td>
           <td></td>
           <td></td>
           <td><a href="/Blog/EditBlog/@item.Id" class="btn btn-primary">Düzenle</a></td>
           <td><a href="/Blog/BlogDelete/@item.Id" class="btn btn-danger">Sil</a></td>
       </tr>
   }
</table>
 <a href="/Blog/BlogAdd" class="btn btn-success">Yeni Blog Oluştur</a>

