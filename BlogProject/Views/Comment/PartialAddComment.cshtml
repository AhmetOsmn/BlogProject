<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
        <form method="post">
            <input class="form-control" type="text" name="UserName" id="txtusername" placeholder="Adınız Soyadınız" required="">
            <input class="form-control" type="text" name="Title" id="txttitle" placeholder="Başlık" required="">
            
            <textarea class="form-control" name="Content" id="txtcontent" placeholder="Yorumunuz..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit" id="btn">Yorum Yap</button>
        </form>
    </div>
</div>

<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            UserName: $("#txtusername").val(),
            Title: $("#txttitle").val(),
            Content: $("#txtcontent").val()
        };

        $.ajax({
            type:"post",
            url:"/Comment/PartialAddComment/",
            data: values,
            success: function(func) {
                let result = jQuery.parseJSON(func)
            }
        });
    })
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
