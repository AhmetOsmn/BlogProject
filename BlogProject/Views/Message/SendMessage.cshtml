@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj</h1>
<br />

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
   
    @Html.Label("Alıcı")
    @*@Html.TextBoxFor(x => x.Image, new { @class="form-control"})*@
    <input type="text" class="form-control"/>
    <br />
     @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class="form-control"})
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x => x.Details, 20, 3, new { @class="form-control"})
    <br />
    <button class="btn btn-success">Gönder</button>
}

