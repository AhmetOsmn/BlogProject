@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int count = Model.Count;}
                            @for (var i = 0; i < 10; i++)
                            {
                                <tr>
                                    <td>
                                        <img src="@Model[count - i -1].Image" class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @Model[count - i - 1].Title
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@Model[count - i -1].Category.Name</label>
                                    </td>
                                    <td>
                                        @(((DateTime)Model[count - i - 1].CreateDate).ToString("dd-MMM-yyyy"))
                                    </td>
                                    <td>
                                        <a href="/Blog/BlogReadAll/@Model[count - i - 1].Id" class="btn btn-warning">Detaylar</a>
                                    </td>
                                </tr>
                            }
                       
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
