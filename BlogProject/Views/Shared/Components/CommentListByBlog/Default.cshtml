@using EntityLayer.Concrete
@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (Comment item in Model)
    {
        <div class="media">
            @*<img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />*@
            <div class="row">
                <div style="border-radius: 50%; background: gray; width: 40px; height:40px; display: flex; align-items: center; justify-content:center;  ">
                    <div>
                        @item.UserName.Substring(0,2)
                    </div>
                </div>
                <div class="media-body" style="margin-left: 20px;">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        </div>
    }
</div>