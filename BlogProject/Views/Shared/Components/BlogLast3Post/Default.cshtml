@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h3>Son Gönderiler</h3>
    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogDetails/@item.Id">
                    <img src="@item.Image" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <h5>
                    @*<a href="/Blog/BlogReadAll/@item.Id">@item.Content.Substring(0,item.Content.Substring(0,50).LastIndexOf(" "))...</a>*@
                    <a href="/Blog/BlogDetails/@item.Id" style="color: #fff">@item.Title</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.CreateDate).ToString("dd-MM-yyyy"))
                    </span>
                </div>
            </div>
        </div>
    }
</div>
