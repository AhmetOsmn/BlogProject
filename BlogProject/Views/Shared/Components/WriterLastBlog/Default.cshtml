@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h4>Yazarın son yazıları</h4>
    @{
        int count = Model.Count;
        if (count > 3)
        {
            for (var i = 0; i < 3; i++)
            {
                <div class="blog-grids row mb-3">
                    <div class="col-md-5 blog-grid-left">
                        <a href="/Blog/BlogDetails/@Model[count - i -1].Id">
                            <img src="@Model[count - i -1].Image" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="col-md-7 blog-grid-right">
                        <h5>
                            <a href="/Blog/BlogDetails/@Model[count - i -1].Id">@Model[count - i -1].Title</a>
                        </h5>
                        <div class="sub-meta">
                            <span>
                                <i class="far fa-clock"></i> @(((DateTime)Model[count - i -1].CreateDate).ToString("dd-MMM-yyyy"))
                            </span>
                        </div>
                    </div>

                </div>
            }
        }
        else
        {
            foreach(var item in Model)
            {
                <div class="blog-grids row mb-3">
                    <div class="col-md-5 blog-grid-left">
                        <a href="/Blog/BlogDetails/@item.Id">
                            <img src="@item.Image" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="col-md-7 blog-grid-right">
                        <h5>
                            <a href="/Blog/BlogDetails/@item.Id">@item.Title</a>
                        </h5>
                        <div class="sub-meta">
                            <span>
                                <i class="far fa-clock"></i> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
                            </span>
                        </div>
                    </div>

                </div>
            }
        }
    }
    
</div>
