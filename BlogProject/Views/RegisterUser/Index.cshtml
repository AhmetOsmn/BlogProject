@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/adminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminTema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminTema/css/animate.css" rel="stylesheet">
    <link href="~/adminTema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <h3>Kayıt Ekranı</h3>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adınız">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserNameSurname"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserNameSurname" placeholder="Adnız Soyadınız">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail"></span>
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password"></span>
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword"></span>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre tekrar" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hasabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>

            </form>
            <p class="m-t"> <small>Core 5.0</small> </p>
        </div>
    </div>

    <script src="~/adminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminTema/js/popper.min.js"></script>
    <script src="~/adminTema/js/bootstrap.js"></script>
    <script src="~/adminTema/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>
</html>
