@using EntityLayer.Concrete
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Blog</th>
                                    <th>Başlık</th>
                                    <th>Puan</th>
                                    <th>Tarih</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                               {
                                  <tr>
                                    <th>@item.Id</th>
                                    <td>@item.UserName</td>
                                    <td>@item.Blog.Title</td>
                                    <td>@item.Title</td>
                                    <td class="text-navy"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
                                    <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                    <td><a href="#" class="btn btn-warning">Detay</a></td>
                                    <td><a href="#" class="btn btn-primary">Düzenle</a></td>
                                    <td><a href="#" class="btn btn-danger">Sil</a></td>
                                </tr> 
                               }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
