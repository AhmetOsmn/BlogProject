@using BlogProject.Areas.Admin.Models
@model List<RoleAssignViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (var i = 0; i < Model.Count; i++)
   {
       <div class="form-check">
           <input type="hidden" asp-for="@Model[i].Id" />
           <input type="hidden" asp-for="@Model[i].Name" />
           <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exist">@Model[i].Name</label>
       </div>
   }
   <br />
   <button class="btn btn-success">Kaydet</button>
</form>
<br />
<a href="/Admin/Role/UserRoleList" class="btn btn-primary">Kullanıcı Listesine Dön</a>
