@using EntityLayer.Concrete
@model List<User>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-bordered"> 
     <tr>
         <th>Kullanıcı</th>
         <th></th>
     </tr>
     @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-warning">Rol Ata</a></td>
        </tr>    
    }
</table>

<a href="/Admin/Role/Index/" class="btn btn-primary">Rol Listesine Dön</a>
